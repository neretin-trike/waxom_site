html
    font-size 62.5%
    box-sizing border-box

body
    font-weight font-weight-light
    font-family 'Montserrat'
    color color-gray
    font-size 1.4rem

    position relative
    max-width 192.0rem 
    margin 0 auto
    background color-white

*
*:before
*:after 
    box-sizing: inherit
    border 0.1rem solid #a2a1bf 

button
    outline none
    border none
    background none
    cursor pointer
    padding 0

    display block

input
    outline none
    border none

a
    text-decoration none
    color purple 

h1, h2, h3, p, blockquote, figure
    reset()

/*-------------------------------
-------- GENERAL STYLES ---------
-------------------------------*/

.overlay
    background-color #111111
    position absolute
    height 100%
    width 100%
    top 0
    opacity 0.7

h2
    margin-bottom 2rem

    text-align center
    font-family 'Raleway'
    font-size 3rem
    font-weight font-weight-semibold
    color color-gray

p
    fonts-size 1.6rem
    color color-lightgray
    line-height 2.4rem

button
    min-width 17rem
    position relative
    padding 1.9rem 3.8rem

    font-weight font-weight-extrabold
    font-family 'Raleway'
    font-size 1.4rem

    color color-white
    text-transform uppercase

    background-color color-lightbrown
    border-radius micro-border-radius
    box-shadow 0 0.3rem 0 darken(color-lightbrown, 25%)

    margin 0 auto

main
    margin-top -14.7rem

.circle-switcher
    display: flex;
    align-items: center;
    justify-content: center;

    a
        width 1rem
        height @width
        
        margin 0 0.35rem

        background-color color-white
        border-radius big-border-radius

        opacity 0.5

        &.selected
            width 1.5rem
            height @width

            border 0.2rem solid color-brown
            background-color transparent

.row
    position relative
    margin 0 auto
    max-width 120rem
    padding-left 1.5rem
    padding-right 1.5rem 
   
    &.no-gutter
        padding-left 0
        padding-right 0 

*[class*='col-']
    padding-left 1.5rem
    padding-right 1.5rem

    &.no-gutter
        padding-left 0
        padding-right 0 


/*-------------------------------
------------ HEADER -------------
-------------------------------*/
header
    base-markup-for-pages(4rem, 4rem, transparent)

    position relative
    z-index 999

    .menu
        display flex
        justify-content space-around

        a
            color color-white
            font-weight font-weight-light

            &:hover
                color color-brown
    
    .adittion
        display flex
        justify-content space-between
        a
            width 2.6rem
            height @width
            
            background-position center
            background-repeat no-repeat

            &.shop
                background-image url(/app/images/shop.png)
            &.search
                background-image url(/app/images/search.png)

/*-------------------------------
------------- HOME --------------
-------------------------------*/

.home
    base-markup-for-pages(38rem, 4rem, ,'/app/images/background.jpg')

    position relative
    height 100%

    color color-white
    
    .slogan
        font-family 'Raleway'
        font-size 3.6rem
        font-weight font-weight-medium
    
    h1
        font-family 'Raleway'
        font-size 5.2rem
        font-weight font-weight-extrabold

    .description
        margin-top 2rem
        margin-bottom 4.8rem
        padding 0 4.5rem

        font-size 1.6rem
        line-height 2.4rem

    nav
        margin-top 30rem

    .arrow
        padding 0
        background-color transparent
        box-shadow none

        position absolute
        top 0 
        bottom 0 
        margin auto

        width 4rem
        height 7.5rem

        background-repeat no-repeat
        background-image url(/app/images/arrows.png)
        background-position-y 100%

        &.left
            left 15rem
        &.right
            right 15rem
            transform scaleX(-1)

/*--------------------------------
------------- SERVICES -----------
--------------------------------*/

.services
    base-markup-for-pages(8rem, 9rem)

    .serivce-item
        text-align center

        &.selected
            .title
                color color-brown
            .description
                &:after
                    background-color color-brown

        .icon
            margin 0 auto
            width 6.4rem
            height 6.4rem

            background-repeat no-repeat
            background-position center

            file-names = design, development, customization, marketing
            for name in file-names
                &.{name}
                    background-image url("/app/images/services/"+name+".png")
        
        .title
            margin  1.2rem 0
            font-family 'Raleway'
            font-weight font-weight-semibold
            font-size 2.2rem

        .description
            line-height 2.4rem

            &:after
                content ''
                display block
                margin 0 auto
                margin-top 2.8rem
                width 7rem
                height 0.2rem
                background-color #f1eee9

/*--------------------------------
----------- REALIZATION ----------
--------------------------------*/

.realization
    base-markup-for-pages(6.5rem)

    .preview
        margin-top 4rem
        margin-bottom -0.4rem

        img 
            max-width 100%

/*--------------------------------
-------------- BANNER ------------
--------------------------------*/

.banner
    base-markup-for-pages(4.5rem,4.5rem, black)
    background-image linear-gradient(to right, #211b19, #4e3427)
    color color-white
    h3
        font-family 'Raleway'
        font-weight font-weight-regular
        font-size 2.8rem
        span 
            color color-brown

    .text 
        margin-top 0.5rem
        font-size 1.8rem
        color #615855

/*--------------------------------
------------ PROJECTS ------------
--------------------------------*/

.projects
    base-markup-for-pages(7rem,8rem)

    .filter
        margin-top 3rem
        margin-bottom 4rem
        display flex

        button
            min-width 7rem
            padding 0.6rem 1.6rem

            text-transform none
            color #8c8c8c
            font-family 'Montserrat'
            font-weight font-weight-light
            
            box-shadow none
            background-color transparent

            border 0.1rem solid #ebebeb

            &.selected
                color color-white
                background-color color-lightbrown
                border none         

    .project-item
        margin-bottom 3rem
        color color-lightgray

        &:hover
            .photo
                .controls
                    display: block

                &:before
                    content ''
                    display block
                    position: absolute
                    width 100%
                    height 100%
                    background-color rgba(#111111, 0.75)
                    background-repeat no-repeat
                    background-position center

            figcaption
                background-color #362f2d
                &:before
                    border-bottom-color #362f2d
                .title
                    color color-white
                .description
                    color color-brown

        .photo
            display flex
            justify-content center
            align-items center

            overflow hidden
            height 24rem
            position relative

            .controls
                position absolute
                display none
                a
                    margin 0 0.7rem
                    display inline-block
                    width 3.6rem
                    height @width
                    background-repeat no-repeat
                    background-position center
                    &.link
                        background-image url(/app/images/link.png)
                    &.zoom
                        background-image url(/app/images/zoom.png)            
            img 
                max-width 100%
        
        figcaption
            padding 3rem
            position relative
            color #fbfaf8

            &:before
                content ''
                display block
                position absolute
                top -3.5rem
                left 1rem

                border 2.5rem solid transparent;	
                border-bottom: 1rem solid color-white;

            .title
                margin-bottom 0.8rem
                font-family 'Raleway'
                font-size 2rem
                font-weight font-weight-medium
                color color-brown
    button
        margin-top 4rem 
        
/*--------------------------------
-------------- VIDEO -------------
--------------------------------*/

.video
    base-markup-for-pages(20.5rem,20rem)

    position relative
    overflow hidden

    .overlay
        opacity 0.5

    h2,p
        color color-white

    img 
        top 0
        left 0
        position absolute
        object-fit cover

    .play
        margin-bottom 3.5rem

        min-width 0
        border-radius big-border-radius
        width 10rem
        height @width
        box-shadow none 

        background-color: rgba(black, 20%)
        background-position center
        background-repeat no-repeat
        background-image url(/app/images/play.png)

    time
        display inline-block
        margin-top 3.5rem
        font-weight font-weight-regular
        color color-brown

/*--------------------------------
------------- MOBILE -------------
--------------------------------*/

.mobile
    base-markup-for-pages(19rem,15rem)

    background-image url(/app/images/mobile_background.png)
    background-size 20%
    background-position 23% bottom
    background-repeat no-repeat 

    article 
        h2, p, ul
            text-align left
    
    ul
        padding 0
        list-style-type none 

        font-size 1.6rem
        color color-lightgray
        line-height 3.2rem

        li
            padding-left 10rem
            background-repeat no-repeat
            background-position 5rem -3.4rem
            background-image url(/app/images/arrows.png)

/*--------------------------------
------------ COUNTERS ------------
--------------------------------*/

.counters
    base-markup-for-pages(7em, 6rem, black)
    background-image linear-gradient(to right, #211b19, #4e3427)
    color color-white

    .counter-item
        .icon
            width 6rem
            height @width
            margin 0 auto

            background-position center
            background-repeat no-repeat

            file-names = clients, cups, posts, likes,launhced
            for name in file-names
                &.{name}
                    background-image url("/app/images/counters/"+name+".png")

        .count
            margin-top 1.8rem
            margin-bottom 1rem

            font-weight font-weight-extralight
            font-size 4.8rem

        .description
            text-transform uppercase
            color color-brown

            &:after
                content ''
                display block
                margin 0 auto
                margin-top 3rem
                width 3rem
                height 0.2rem

                background-color color-white

